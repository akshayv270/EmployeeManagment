@model EmployeeManagment.Models.StateModel;
@{
    ViewData["Title"] = "CreateState";
}

<form asp-action="CreateState" method="post" role="form">

    <div class="form-group">
        <label asp-for="StateName"></label>
        <div class="col-md-5">

            <input asp-for="StateName" class="form-control" />
            <span asp-validation-for="StateName" class="text-danger"></span>
        </div>
    </div>
      <div class="form-group">
        <label asp-for="IsActive"></label>
        <div class="col-md-5">

            <input asp-for="IsActive" type="checkbox" />
      
        </div>
    </div>

   

    <div class="from-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn- btn-primary" value="Submit" />
        </div>
    </div>
</form>